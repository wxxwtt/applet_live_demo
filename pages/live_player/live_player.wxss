.player-content {
  position: relative;
  height: 450rpx;
}
.live-text {
  position: absolute;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 0 8px 8px 0;
}
.live-loading {
  color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.live-loading {
  background: none;
  border: none;
}
.van-loading__spinner {
  box-sizing: border-box;
  width: 30px;
  width: var(--loading-spinner-size,30px);
  max-width: 100%;
  max-height: 100%;
  height: 30px;
  height: var(--loading-spinner-size,30px);
  -webkit-animation: van-rotate .8s linear infinite;
  animation: van-rotate .8s linear infinite;
  -webkit-animation: van-rotate var(--loading-spinner-animation-duration,.8s) linear infinite;
  animation: van-rotate var(--loading-spinner-animation-duration,.8s) linear infinite;
  background: none;
  border: none;

  }
  
